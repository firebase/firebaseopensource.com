  "main": "lib/functions/src/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^4.10.0",
    "cheerio": "1.0.0-rc.1",
    "comment-json": "^1.1.3",
    "express": "4.21.2",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2",
    "fs-extra": "^5.0.0",
    "google-auth-library": "^9.15.1",
